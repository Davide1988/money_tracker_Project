<%
def reverseWords(s)
  s.split('-').reverse.join('-')
end
%>

<label>
Select the category you want to view the transactions for :
  <select name="tag_id">
    <% for tag in @tags %>
    <option><%= tag.type %></option>
  <% end %>
  </select>
</label>


<%@transactions.each do |transaction|%>
<% if transaction.tag_id == 1 %>
