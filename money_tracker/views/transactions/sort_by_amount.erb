
<%
def reverseWords(s)
  s.split('-').reverse.join('-')
end
%>

<a href="/transactions">Back to the Transacions list</a>

<h1>Transactions : </h1>

<%@transactions.sort!{ |a,b| a.amount <=> b.amount}%>



<%@transactions.each do |transaction|%>
<p>Merchant : <%= transaction.merchant.name %></p>
<p>Category : <%= transaction.tag.type %></p>
<p>Transaction date : <% date = transaction.transaction_date %> <%= date = reverseWords(date) %></p>
<p>Transaction amount £ : <%= transaction.amount%></p>
<hr>
<% @total += transaction.amount %>
<% end %>

<p class="total_spend">Your total spend is £ : <strong><%= @total %></strong></p>
